/* pages/public/public.wxss */
.row{
  display: flex;
  height: 100rpx;
  align-items: center;
  padding: 0 18rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f3f3f3;
  font-size: 30rpx;
  color: #ccc
}
.row>text{
  width: 200rpx
}
.public{
  width: 90%;
  color: #fff;
  border: 0;
  background: #ff9700;
  margin-top: 50rpx;
}
/* success */
.success{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.success>text{
  margin-top: 30rpx;
}
.success>button{
  margin-top: 100rpx;
  width: 90%;
  background:#ff9700;
  color: #fff; 
}


